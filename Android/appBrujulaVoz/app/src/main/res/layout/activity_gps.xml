<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context=".GPSNavigationActivity"
    android:orientation="vertical">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:textColor="#ff6600"
            android:textSize="20dp" />

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/Norte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/norte"
            android:textColor="#652207"
            android:textSize="30sp"/>

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/oeste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oeste"
            android:textColor="#652207"
            android:layout_gravity="center_vertical"
            android:textSize="30sp"
            android:layout_weight="0.14"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/imgViewCompass"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/navigation"
            android:layout_weight="0.70"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/este"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/este"
            android:textColor="#652207"
            android:layout_gravity="center_vertical"
            android:textSize="30sp"
            android:layout_weight="0.17"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="false" />

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/Sur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sur"
        android:textColor="#652207"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    </TableRow>

</LinearLayout>